@using Onestop.Navigation.Models
@model AdminMenuItemRecord
@{
    Layout.Title = T("Create New Admin Menu Item").Text;

    using (Html.BeginFormAntiForgeryPost()) {
        @Html.ValidationSummary()
        <fieldset>
            <legend>@T("New Admin Menu Item")</legend>
            @Html.LabelFor(m => Model.Text, T("Text"))
            @Html.EditorFor(m => Model.Text)
            @Html.ValidationMessageFor(m => Model.Text)

            @Html.LabelFor(m => Model.Url, T("Url"))
            @Html.EditorFor(m => Model.Url)
            @Html.ValidationMessageFor(m => Model.Url)

            @Html.LabelFor(m => Model.Position, T("Position"))
            @Html.EditorFor(m => Model.Position)
            @Html.ValidationMessageFor(m => Model.Position)

            @Html.LabelFor(m => Model.ItemGroup, T("Group"))
            @Html.EditorFor(m => Model.ItemGroup)
            @Html.ValidationMessageFor(m => Model.ItemGroup)

            @Html.LabelFor(m => Model.GroupPosition, T("Group Position"))
            @Html.EditorFor(m => Model.GroupPosition)
            @Html.ValidationMessageFor(m => Model.GroupPosition)
        </fieldset>
        <fieldset><input class="button primaryAction" type="submit" value="@T("Save")" /></fieldset>
    }
}