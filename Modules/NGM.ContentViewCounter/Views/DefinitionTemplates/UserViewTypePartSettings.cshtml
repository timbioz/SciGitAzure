@model NGM.ContentViewCounter.Settings.UserViewTypePartSettings
<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m => m.DisplayType)">@T("Display Type")</label>
        @Html.TextBoxFor(m => m.DisplayType, new { @class = "textMedium" })
        <span class="hint">@T("The display type, i.e. Detail, Summary, DetailAdmin, SummaryAdmin, etc")</span>
    </div>
    <div>
        @Html.EditorFor(m => m.AllowAnonymousViews)
        <label class="forcheckbox" for="@Html.FieldIdFor(m => m.AllowAnonymousViews)">@T("Allow anonymous views to count")</label>
    </div>
    <div>
        @Html.EditorFor(m => m.AllowMultipleViewsFromSameUserToCount)
        <label class="forcheckbox" for="@Html.FieldIdFor(m => m.AllowMultipleViewsFromSameUserToCount)">@T("Allow multiple views from the same user")</label>
    </div>
</fieldset>